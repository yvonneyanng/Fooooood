<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/order_dialog"
    android:paddingLeft="20dp"
    android:paddingTop="15dp"
    android:paddingRight="20dp"
    android:paddingBottom="15dp">

    <TextView
        android:id="@+id/please_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="加入新餐點"
        android:textColor="@color/orange"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addName"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="餐點名稱"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:paddingLeft="10dp"
        android:textColorHint="#a3a3a3"
        app:layout_constraintEnd_toEndOf="@+id/takePhoto"
        app:layout_constraintStart_toStartOf="@+id/takePhoto"
        app:layout_constraintTop_toBottomOf="@+id/takePhoto" />

    <EditText
        android:id="@+id/addPrice"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="價格"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:paddingLeft="10dp"
        android:textColorHint="#a3a3a3"
        app:layout_constraintEnd_toEndOf="@+id/addName"
        app:layout_constraintStart_toStartOf="@+id/addName"
        app:layout_constraintTop_toBottomOf="@+id/addName" />

    <ImageView
        android:id="@+id/takePhoto"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/edit_background"
        app:layout_constraintEnd_toEndOf="@+id/please_add"
        app:layout_constraintStart_toStartOf="@+id/please_add"
        app:layout_constraintTop_toBottomOf="@+id/please_add"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="確定"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/addPrice"
        app:layout_constraintStart_toStartOf="@+id/addPrice"
        app:layout_constraintTop_toBottomOf="@+id/addPrice" />

</androidx.constraintlayout.widget.ConstraintLayout>